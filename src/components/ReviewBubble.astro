---
interface Props {
    quote: string;
}

const { quote } = Astro.props;
---

<div class="review-bubble">
    <span class="quote-mark open">"</span>
    <p class="review-text">{quote}</p>
    <span class="quote-mark close">"</span>
</div>

<style>
    .review-bubble {
        background: var(--surface-secondary, rgba(0, 0, 0, 0.03));
        border: 1px solid var(--border-subtle, rgba(0, 0, 0, 0.08));
        border-radius: var(--radius-md, 12px);
        padding: 2rem 2.5rem;
        position: relative;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        flex: 1 1 0;
        min-width: 0;
        display: flex;
        align-items: center;
    }

    :global([data-theme="dark"]) .review-bubble {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.1);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .quote-mark {
        position: absolute;
        font-size: 2.5rem;
        font-weight: 700;
        color: #ff9500;
        opacity: 0.3;
        line-height: 1;
        font-family: "Public Sans", sans-serif;
    }

    .quote-mark.open {
        top: 0.75rem;
        left: 1rem;
    }

    .quote-mark.close {
        bottom: 0.5rem;
        right: 1rem;
    }

    .review-text {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--text-primary);
        font-style: italic;
        text-align: center;
        width: 100%;
        font-family: "Public Sans", var(--font-sans), sans-serif;
    }
</style>
