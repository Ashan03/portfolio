---
import ThemeToggle from "./ThemeToggle.astro";
---

<aside class="sidebar">
    <div class="sidebar-content">
        <div class="brand">
            <a href="/">Narayan Ashanahalli</a>
        </div>

        <nav class="nav-links">
            <a href="/#work">Work</a>
            <a href="/#about">About</a>
            <a href="/#contact">Contact</a>
        </nav>

        <div class="controls">
            <ThemeToggle />
        </div>
    </div>
</aside>

<style>
    .sidebar {
        width: 100%;
        height: 100vh;
        position: sticky;
        top: 0;
        border-right: 1px solid var(--border-subtle);
        background: var(--bg-primary); /* Matches main bg */
        display: flex;
        flex-direction: column;
        z-index: 100;
    }

    .sidebar-content {
        padding: var(--space-lg) var(--space-md);
        display: flex;
        flex-direction: column;
        height: 100%;
        gap: var(--space-2xl);
    }

    .brand a {
        font-weight: 700;
        font-size: 1.1rem;
        letter-spacing: -0.02em;
        line-height: 1.4;
        display: block;
        max-width: 150px;
        color: var(--text-primary);
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
    }

    .nav-links a {
        font-size: 1rem;
        color: var(--text-secondary);
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .nav-links a:hover {
        color: var(--text-primary);
    }

    .controls {
        margin-top: auto; /* Push to bottom */
    }

    @media (max-width: 768px) {
        .sidebar {
            height: auto;
            position: relative;
            border-right: none;
            border-bottom: 1px solid var(--border-subtle);
        }

        .sidebar-content {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            padding: var(--space-md);
            gap: var(--space-md);
        }

        .nav-links {
            display: none; /* Hide links on mobile for now, or use hamburger */
        }

        .controls {
            margin-top: 0;
        }
    }
</style>
