---
interface Props {
    title: string;
    id: string;
    description?: string;
    theme?: "logic" | "embodied" | "spatial" | "strategy";
}

const { title, id, description, theme = "logic" } = Astro.props;

const themeColors = {
    logic: "var(--accent-logic)",
    embodied: "var(--accent-embodied)",
    spatial: "var(--accent-spatial)",
    strategy: "var(--accent-strategy)",
};

const accentColor = themeColors[theme];
---

<section id={id} class="category-section">
    <div class="container">
        <div class="category-header">
            <h2 class="category-title" style={`--accent: ${accentColor}`}>
                {title}
            </h2>
            {description && <p class="category-description">{description}</p>}
        </div>

        <div class="projects-grid">
            <slot />
        </div>
    </div>
</section>

<style>
    .category-section {
        margin-bottom: var(--space-4xl);
        scroll-margin-top: 100px; /* Precise height of sticky header (approx) */
    }

    .category-section .container {
        padding-top: 0;
    }

    .category-header {
        margin-bottom: 3rem;
    }

    .category-title {
        font-size: 2rem;
        margin-bottom: 0.1rem;
        display: inline-block;
    }

    .category-description {
        color: var(--text-secondary);
        max-width: 600px;
        font-size: 1.1rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.25rem;
    }
</style>
