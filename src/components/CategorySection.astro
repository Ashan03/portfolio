---
interface Props {
    title: string;
    id: string;
    description?: string;
}

const { title, id, description } = Astro.props;
---

<section id={id} class="category-section">
    <div class="container">
        <div class="category-header">
            <h2 class="category-title">
                {title}
            </h2>
            {description && <p class="category-description">{description}</p>}
        </div>

        <div class="projects-grid">
            <slot />
        </div>
    </div>
</section>

<style>
    .category-section {
        margin-bottom: var(--space-4xl);
        scroll-margin-top: 100px; /* Precise height of sticky header (approx) */
    }

    .category-section .container {
        padding-top: 0;
    }

    .category-header {
        margin-bottom: 3rem;
    }

    .category-title {
        font-size: 2rem;
        margin-bottom: 0.1rem;
        display: inline-block;
    }

    .category-description {
        color: var(--text-secondary);
        max-width: 600px;
        font-size: 1.1rem;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
    }

    @media (max-width: 768px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
