---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section class="project-section">
    <div class="section-title-col">
        <h3>{title}</h3>
    </div>
    <div class="section-content-col">
        <slot />
    </div>
</section>

<style>
    .project-section {
        display: grid;
        grid-template-columns: 1fr 2fr; /* 1/3 title, 2/3 content */
        gap: var(--space-xl);
        align-items: start;
    }

    .section-title-col h3 {
        font-size: 1.5rem;
        color: var(--text-primary);
        position: sticky;
        top: 2rem; /* Stick to top while scrolling this section */
        margin-top: 0;
    }

    .section-content-col {
        font-size: 1rem;
        line-height: 1.7;
        color: var(--text-secondary);
    }
    
    /* Make embedded content responsive */
    .section-content-col :global(img), 
    .section-content-col :global(video) {
        max-width: 100%;
        border-radius: var(--radius-sm);
        margin-bottom: var(--space-md);
        display: block;
    }
    
    /* Grid for multiple images in content */
    .section-content-col :global(.grid-2) {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-sm);
    }
    
    .section-content-col :global(.grid-3) {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-sm);
    }

    @media (max-width: 768px) {
        .project-section {
            grid-template-columns: 1fr;
            gap: var(--space-sm);
        }
        
        .section-title-col h3 {
            position: static;
            margin-bottom: var(--space-xs);
        }
    }
</style>
