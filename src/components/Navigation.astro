---
import ThemeToggle from "./ThemeToggle.astro";
---

<nav class="nav-container">
    <div class="center-section">
        <div class="links">
            <a href="#works">Work</a>
            <a href="#about">About</a>
            <a href="#contact">Contact</a>
        </div>
    </div>
    <div class="right-section">
        <ThemeToggle />
    </div>
</nav>

<style>
    .nav-container {
        display: grid;
        grid-template-columns: 1fr auto 1fr; /* Center the middle column */
        align-items: center;
        padding: 2rem var(--space-md); /* Vertical padding same, horizontal uses variable */
        width: 100%; /* Full width */
    }

    /* Empty left column to balance grid if needed, or just rely on grid */
    /* actually grid-template-columns: 1fr auto 1fr puts the middle item in center */

    .center-section {
        grid-column: 2;
        display: flex;
        justify-content: center;
    }

    .right-section {
        grid-column: 3;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .links {
        display: flex;
        gap: 3rem; /* Cleaner, wider spacing */
    }

    .links a {
        font-size: 0.95rem; /* Slightly larger, more confident */
        color: var(--text-secondary);
        font-weight: 500; /* Regular weight, cleaner */
        transition: color 0.2s ease;
    }

    .links a:hover {
        color: var(--text-primary);
    }

    @media (max-width: 768px) {
        .nav-container {
            display: flex;
            justify-content: space-between;
        }

        .center-section {
            display: none; /* Hide links on mobile for now or change to hamburger */
        }
    }
</style>
