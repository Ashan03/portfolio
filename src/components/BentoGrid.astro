<div class="bento-grid">
    <slot />
</div>

<style>
    .bento-grid {
        display: flex;
        flex-direction: row;
        gap: 10px; /* 10px horizontal spacing between columns */
        width: 100%;
        max-width: none; /* Allow full expansion */
        margin: 0 auto;
        align-items: flex-start;
    }

    .bento-grid > :global(*) {
        display: flex;
        flex-direction: column;
        gap: 10px; /* 10px vertical spacing within each column */
        flex: 1 1 0;
    }

    @media (max-width: 1024px) {
        .bento-grid {
            flex-direction: column;
        }
    }
</style>
