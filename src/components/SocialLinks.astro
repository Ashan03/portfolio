<style>
    .social-group {
        display: flex;
        gap: 0.8rem;
        align-items: center;
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-md);
        background: transparent;
    }

    .social-link {
        display: flex;
        align-items: center;
        opacity: 0.5;
        transition: all 0.2s ease;
    }

    .social-link:hover {
        opacity: 1;
        transform: translateY(-2px);
    }

    .s-icon {
        width: 18px;
        height: 18px;
        object-fit: contain;
    }

    /* Theme-aware icon visibility */
    /* Dark Mode (Default) -> Show Dark Icon */
    .icon-light {
        display: none;
    }
    .icon-dark {
        display: block;
    }

    /* Light Mode -> Show Light Icon */
    :global([data-theme="light"]) .icon-light {
        display: block;
    }
    :global([data-theme="light"]) .icon-dark {
        display: none;
    }
</style>
