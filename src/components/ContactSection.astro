<section id="contact" class="contact-section">
    <div class="contact-header glass-panel-sticky">
        <h2>Let's Connect</h2>
    </div>

    <div class="contact-content">
        <p class="contact-intro">
            Feel free to reach out if you have a project idea, or any questions.
            You can use the form below for project inquiries.
        </p>

        <div class="contact-actions">
            <!-- Email Copy Button -->
            <button
                class="copy-btn"
                data-clipboard-text="nashanah@andrew.cmu.edu"
            >
                <span class="text">nashanah@andrew.cmu.edu</span>
                <span class="icon">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect x="9" y="9" width="13" height="13" rx="2" ry="2"
                        ></rect><path
                            d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
                        ></path></svg
                    >
                </span>
                <span class="copied-msg hidden">Copied!</span>
            </button>

            <!-- Phone Copy Button -->
            <button class="copy-btn" data-clipboard-text="412-626-2332">
                <span class="text">412-626-2332</span>
                <span class="icon">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect x="9" y="9" width="13" height="13" rx="2" ry="2"
                        ></rect><path
                            d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"
                        ></path></svg
                    >
                </span>
                <span class="copied-msg hidden">Copied!</span>
            </button>

            <!-- Mailto Action -->
            <a href="mailto:nashanah@andrew.cmu.edu" class="action-btn primary">
                hit me up!
            </a>
        </div>
    </div>
</section>

<script>
    // Copy to clipboard logic
    const copyBtns = document.querySelectorAll(".copy-btn");

    copyBtns.forEach((btn) => {
        btn.addEventListener("click", () => {
            const text = btn.getAttribute("data-clipboard-text");
            if (text) {
                navigator.clipboard.writeText(text).then(() => {
                    // Show Feedback
                    const msg = btn.querySelector(".copied-msg");
                    msg?.classList.remove("hidden");
                    msg?.classList.remove("hidden");
                    setTimeout(() => {
                        msg?.classList.add("hidden");
                    }, 800);
                });
            }
        });
    });
</script>

<style>
    .contact-section {
        margin-top: var(--space-4xl);
        position: relative;
        min-height: 80vh; /* Ensure it takes up space for the final scroll layer */
    }

    /* Sticky Header Logic */
    .glass-panel-sticky {
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        background: var(--bg-glass); /* Themed glass */
        padding: var(--space-md) 0;
        border-bottom: 1px solid transparent;
        transition: border-color 0.3s ease;
    }

    /* Add border when stuck? Optional extra polish */

    .contact-header h2 {
        font-size: 3rem;
        margin: 0;
    }

    .contact-content {
        padding-top: var(--space-xl);
        max-width: 600px;
        display: flex;
        flex-direction: column;
        width: fit-content;
    }

    .contact-intro {
        color: var(--text-secondary);
        font-size: 1.1rem;
        margin-bottom: var(--space-lg);
        line-height: 1.6;
        width: 0;
        min-width: 100%;
    }

    .contact-actions {
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
        margin-bottom: var(--space-xl);
        width: fit-content; /* Hug the content */
    }

    /* Buttons */
    .copy-btn,
    .action-btn {
        display: flex;
        align-items: center;
        width: 100%; /* Fill the container */
        gap: 0.75rem;
        padding: 1rem 1rem;
        border-radius: var(--radius-md);
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        position: relative;
    }

    /* Copy Buttons */
    .copy-btn {
        background: var(--bg-surface);
        border: 1px solid var(--border-subtle);
        color: var(--text-primary);
        justify-content: center;
        position: relative;
        padding: 1.25rem 4rem; /* Large padding to prevent overlap with icon */
    }

    .copy-btn .icon {
        color: var(--text-muted);
        transition: color 0.2s ease;
        display: flex;
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
    }

    .copy-btn:hover {
        transform: translateY(-2px);
        border-color: var(--accent-secondary);
        background: var(--accent-secondary); /* Solid Green */
        color: #000000; /* Black text for accessibility (Contrast 8.7:1) */
        box-shadow: 0 4px 12px rgba(66, 189, 73, 0.3); /* Glow */
    }

    .copy-btn:hover .icon {
        color: #000000;
    }

    .copied-msg {
        position: absolute;
        /* Push outside to top right */
        right: -4rem;
        top: 1.4rem;

        color: var(--accent-secondary); /* Use theme green */
        font-weight: 700;
        font-size: 0.85rem;
        pointer-events: none;
        white-space: nowrap;
        z-index: 10;

        display: block;
    }

    :global([data-theme="light"]) .copied-msg {
        color: var(--accent-secondary);
    }

    .copied-msg.hidden {
        display: none;
    }

    .copy-btn .copied-msg:not(.hidden) {
        animation: blink-spark 0.4s cubic-bezier(0.25, 1, 0.5, 1) forwards;
    }

    @keyframes blink-spark {
        0% {
            opacity: 0;
            transform: scale(0.5) translate(0, 10px);
        }
        50% {
            opacity: 1;
            transform: scale(1.1) translate(0, 0);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }
    .action-btn.primary {
        background: transparent;
        border: 1px solid var(--border-subtle);
        color: var(--text-primary);
        justify-content: center; /* Keep this centered */
    }

    .action-btn.primary:hover {
        background: var(--accent-secondary);
        border-color: var(--accent-secondary);
        color: #000000;
        box-shadow: 0 4px 12px rgba(66, 189, 73, 0.3);
    }

    .hidden {
        display: none;
    }
</style>
