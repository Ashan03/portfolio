<div class="filter-container">
    <div class="segmented-control">
        <div class="glider"></div>
        <a href="#strategy" class="filter-btn active" data-target="strategy"
            >Strategy</a
        >
        <a href="#spatial" class="filter-btn" data-target="spatial">Spatial</a>
        <a href="#embodied" class="filter-btn" data-target="embodied"
            >Embodied</a
        >
        <a href="#thinking" class="filter-btn" data-target="thinking">
            Tools for Thinking
        </a>
    </div>
</div>

<style>
    .filter-container {
        display: flex;
        justify-content: flex-start;
        margin-bottom: 0;
        position: relative; /* Sticky handled by parent in index.astro */
        z-index: 100;
        /* padding removed for alignment control in parent */
        padding-top: var(--space-md);
        /* Blur is handled by parent .works-header-sticky */
    }

    .segmented-control {
        display: inline-flex;
        background: var(--bg-surface);
        padding: 6px; /* Reverted offset */
        border-radius: var(--radius-md); /* Match Navigation Box Curve */
        border: 1px solid var(--border-subtle);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        position: relative; /* Context for glider */
    }

    .glider {
        position: absolute;
        top: 6px; /* Increased offset */
        left: 6px; /* Increased offset */
        height: calc(100% - 12px); /* Adjusted for new padding */
        background: var(--text-primary);
        border-radius: var(--radius-sm); /* Inner concentric curve */
        transition:
            transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1),
            width 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        z-index: 1;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .filter-btn {
        background: transparent;
        border: none;
        color: var(--text-secondary);
        padding: 0.25rem 1rem; /* Reduced to compensate for outer padding */
        border-radius: var(--radius-sm); /* Inner concentric curve */
        cursor: pointer;
        font-family: var(--font-sans);
        font-size: 0.85rem;
        font-weight: 600;
        transition: color 0.2s ease;
        position: relative;
        z-index: 2; /* Above glider */
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
    }

    .filter-btn:hover {
        color: var(--text-primary);
    }

    /* When active, make text contrast with the glider (which is text-primary color) */
    .filter-btn.active {
        color: var(--bg-primary);
    }

    @media (max-width: 768px) {
        .filter-container {
            display: none;
        }
    }

    .filter-container {
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
    }

    .filter-container.fade-out {
        opacity: 0;
        pointer-events: none;
        transform: translateY(-10px);
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const container = document.querySelector(".filter-container");
        const links = document.querySelectorAll(".filter-btn");
        const glider = document.querySelector(".glider") as HTMLElement;
        const sections = document.querySelectorAll("section[id], div[id]"); // Match target sections

        // Lock mechanism to prevent ScrollSpy from overriding click selection
        let isManualScroll = false;
        let scrollTimeout: any;

        function moveGlider(btn: HTMLElement) {
            if (!btn || !glider) return;
            const offsetLeft = btn.offsetLeft;
            const width = btn.offsetWidth;

            glider.style.width = `${width}px`;
            glider.style.transform = `translateX(${offsetLeft - 6}px)`; // Match padding
        }

        // Initialize glider
        const activeBtn = document.querySelector(
            ".filter-btn.active",
        ) as HTMLElement;
        if (activeBtn) requestAnimationFrame(() => moveGlider(activeBtn));

        // Click Handler (Instant update + Lock)
        links.forEach((link) => {
            link.addEventListener("click", (e) => {
                // Lock ScrollSpy to prevent "glider jumping" during smooth scroll
                isManualScroll = true;
                clearTimeout(scrollTimeout);
                scrollTimeout = setTimeout(() => {
                    isManualScroll = false;
                }, 800); // Lock for 800ms (approx smooth scroll duration)

                // Let default anchor behavior happen (scrolling)
                // But update visual state immediately
                links.forEach((l) => l.classList.remove("active"));
                link.classList.add("active");
                moveGlider(link as HTMLElement);
            });
        });

        // Scroll Spy (IntersectionObserver)
        const observerCallback = (entries: IntersectionObserverEntry[]) => {
            checkActiveSection();
        };

        const checkActiveSection = () => {
            // Precise Switch Point: When section top touches the bottom of the sticky UI.
            // Sticky UI is approx 100px height.
            const offset = 110;

            let currentId = "";

            // Targets: "strategy", "spatial", "embodied", "thinking"
            const targets = ["strategy", "spatial", "embodied", "thinking"];

            // Loop to find the active section
            // We want the LAST section that has its top ABOVE the cutoff line.
            for (const id of targets) {
                const section = document.getElementById(id);
                if (section) {
                    const rect = section.getBoundingClientRect();
                    // rect.top is distance from viewport top.
                    // If rect.top <= offset, it means the start of the section
                    // has passed the trigger line (bottom of header).
                    if (rect.top <= offset) {
                        currentId = id;
                    }

                    // Visibility Logic: Hide filter when halfway through "thinking" (last item)
                    if (id === "thinking" && container) {
                        // If thinking section is scrolled more than 50% past the top
                        if (rect.top < -(rect.height * 0.5)) {
                            container.classList.add("fade-out");
                        } else {
                            container.classList.remove("fade-out");
                        }
                    }
                }
            }

            if (currentId) {
                // Update active link
                links.forEach((link) => {
                    link.classList.remove("active");
                    if (link.getAttribute("data-target") === currentId) {
                        link.classList.add("active");
                        moveGlider(link as HTMLElement);
                    }
                });
            }
        };

        // Use scroll event for smoother ScrollSpy updates, debounced/throttled if needed.
        let ticking = false;
        window.addEventListener("scroll", () => {
            // Only update if not currently scroll-locked by a click
            if (!ticking && !isManualScroll) {
                window.requestAnimationFrame(() => {
                    checkActiveSection();
                    ticking = false;
                });
                ticking = true;
            }
        });

        // Initial check
        checkActiveSection();

        // Handle resize
        window.addEventListener("resize", () => {
            const currentActive = document.querySelector(
                ".filter-btn.active",
            ) as HTMLElement;
            if (currentActive) moveGlider(currentActive);
        });
    });
</script>
