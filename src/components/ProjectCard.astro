---
interface Props {
    title: string;
    description: string;
    image?: string;
    tags?: string[];
    href?: string;
}

const { title, description, image, tags = [], href = "#" } = Astro.props;
---

<a href={href} class="project-card">
    <div class="card-image">
        {
            image ? (
                <img src={image} alt={title} />
            ) : (
                <div class="placeholder-image" />
            )
        }
    </div>
    <div class="card-content">
        <h3>{title}</h3>
        <div class="tags">
            {tags.map((tag) => <span>{tag}</span>)}
        </div>
        <p>{description}</p>
    </div>
</a>

<style>
    .project-card {
        display: block;
        height: 100%;
        border: 1px solid var(--border-subtle); /* Theme-aware border */
        background: var(--bg-surface); /* Theme-aware background */
        border-radius: var(--radius-md);
        padding: 1.25rem;
        transition:
            border-color 0.3s ease,
            background-color 0.3s ease,
            box-shadow 0.3s ease,
            transform 0.3s ease;
    }

    .project-card:hover {
        /* User Requirement: "Green Border (Interaction/Select)" -> "Green Outer Glow" */
        border-color: var(--border-subtle); /* Keep border neutral */
        background: var(--bg-surface-hover);
        /* Green Glow */
        box-shadow:
            0 0 20px rgba(66, 189, 73, 0.15),
            0 0 4px rgba(66, 189, 73, 0.1);
        transform: translateY(-1px); /* Subtle lift */
    }

    .card-image {
        aspect-ratio: 16/9;
        background-color: var(--bg-surface);
        border-radius: var(--radius-md);
        overflow: hidden;
        margin-bottom: 1.5rem; /* Space between image and title */
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        filter: grayscale(100%);
        filter: saturate(0);
    }

    .project-card:hover .card-image img {
        transform: scale(1.03);
        filter: saturate(1);
    }

    .card-content {
        padding: 0;
    }

    h3 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem; /* Larger gap after title */
        color: var(--text-primary);
        font-weight: 700;
        line-height: 1.2;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem; /* Gap between tags if wrapping */
        margin-bottom: 0.35rem; /* Tight gap to description */
    }

    .tags span {
        font-size: 0.7rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
    }

    .tags span:not(:last-child)::after {
        content: "â€¢";
        margin-left: 0.5rem;
        opacity: 0.3;
    }

    p {
        font-size: 14px;
        color: var(--text-secondary);
        margin: 0; /* Remove default margins */
        line-height: 1.5;
        max-width: 100%;
    }
</style>
