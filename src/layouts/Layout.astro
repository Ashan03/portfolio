---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Design Technologist Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta property="og:description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/happy.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&family=Public+Sans:wght@300;400;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<meta property="og:site_name" content="Narayan Ashanahalli" />
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "Narayan Ashanahalli",
				"url": "https://www.narayan.works/"
			}
		</script>
		<title>{title}</title>
	</head>
	<body>
		<div class="universal-layout">
			<!-- Sidebar Slot (Universal Left) -->
			<aside class="layout-sidebar">
				<slot name="sidebar" />
			</aside>

			<!-- Main Content Slot (Universal Right) -->
			<main class="layout-content">
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	/* Reset body */
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		background: var(--bg-primary);
		color: var(--text-primary);
	}

	.universal-layout {
		display: grid;
		grid-template-columns: 320px 1fr; /* Fixed Left, Fluid Right */
		min-height: 100vh;
	}

	.layout-sidebar {
		background: var(--bg-primary);
		border-right: 1px solid var(--border-subtle);
		padding: var(--space-md);
		position: sticky;
		top: 0;
		height: 100vh;
		overflow-y: auto;
		display: flex;
		flex-direction: column;
	}

	.layout-content {
		min-width: 0; /* Prevent grid blowout */
	}

	@media (max-width: 1024px) {
		.universal-layout {
			display: block; /* Prevent grid height stretching */
		}

		.layout-sidebar {
			position: relative;
			height: auto;
			min-height: 0; /* Safety */
			border-right: none;
			border-bottom: none; /* Removed line per request */
			overflow: visible; /* Ensure sticky children work */
			display: block;
			padding-bottom: 20px; /* Force 20px update */
		}
	}
</style>
