---
import "../styles/global.css";
import CustomCursor from "../components/CustomCursor.astro";

interface Props {
	title: string;
	description?: string;
	fullWidth?: boolean;
}

const {
	title,
	description = "Design Technologist Portfolio",
	fullWidth = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta property="og:description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/happy.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400&family=Public+Sans:wght@300;400;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<meta property="og:site_name" content="Narayan Ashanahalli" />
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "Narayan Ashanahalli",
				"url": "https://www.narayan.works/"
			}
		</script>
		<title>{title}</title>
	</head>
	<body>
		<CustomCursor />
		<div class={`universal-layout ${fullWidth ? "full-width" : ""}`}>
			<!-- Sidebar Slot (Universal Left) -->
			<aside class="layout-sidebar">
				<slot name="sidebar" />
			</aside>

			<!-- Main Content Slot (Universal Right) -->
			<main class="layout-content">
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	/* Reset body */
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		background: var(--bg-primary);
		color: var(--text-primary);
	}

	@media (min-width: 769px) {
		body {
			cursor: none; /* Hide default cursor only on desktop */
		}
		/* Ensure links also don't show cursor */
		a,
		button,
		[role="button"] {
			cursor: none !important;
		}
	}

	.universal-layout {
		display: grid;
		grid-template-columns: minmax(0, 1fr) 320px; /* Fluid Content (Left), 320px Fixed Sidebar (Right) */
		min-height: 100vh;
	}

	.universal-layout.full-width {
		display: block;
	}

	.layout-sidebar {
		background: var(--bg-primary);
		border-left: 1px solid var(--border-subtle); /* Changed from Right to Left */
		border-right: none;
		padding: var(--space-md);
		position: sticky;
		top: 0;
		height: 100vh;
		overflow-y: auto;
		display: flex;
		flex-direction: column;
		width: 320px; /* Explicit width constraint */
		box-sizing: border-box; /* Include padding in width */
		/* Ensure it sits in the second column */
		grid-column: 2 / 3;
		grid-row: 1;
	}

	.layout-content {
		min-width: 0; /* Prevent grid blowout */
		/* Ensure it sits in the first column */
		grid-column: 1 / 2;
		grid-row: 1;
	}

	.full-width .layout-sidebar {
		display: none;
	}

	.full-width .layout-content {
		grid-column: auto; /* Reset for full width */
	}

	@media (max-width: 1024px) {
		.universal-layout {
			display: block; /* Prevent grid height stretching */
		}

		.layout-sidebar {
			position: relative;
			height: auto;
			min-height: 0; /* Safety */
			border-left: none; /* Reset border */
			border-bottom: none; /* Removed line per request */
			overflow: visible; /* Ensure sticky children work */
			display: block;
			padding-bottom: 20px; /* Force 20px update */
			width: 100%; /* Reset width */
			grid-column: auto;
		}

		/* Show default cursor on mobile/touch devices if needed, 
		   though 'cursor: none' is usually fine as they don't have a cursor. 
		   But if a mouse is connected to iPad: */
	}
</style>
